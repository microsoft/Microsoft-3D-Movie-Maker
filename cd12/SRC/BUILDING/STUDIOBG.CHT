OBJECT( "studio1: toolbox anim",  kgobStudio1TV, 810, kcrsHand1 )
	REP_ANIM(CHID(kst1, krepDefault), "Studio: Toolbox TV")
 		cnt = kcell1;
		SetNoSlipThis( fTrue );		// we can now drop frames!
