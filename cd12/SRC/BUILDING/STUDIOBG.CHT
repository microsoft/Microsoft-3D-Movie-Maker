 		// disable hotspots and play the toolbox pop out.
 		DISABLEHOTSPOTS(kflgBuildingMin);
		ENDVOICE();
 		cnt = kcell1;
		Cell( cnt++, 0,0, 6 );
		VOICE( kwavStudioTVPop, 0 );
		CreateChildGob( kgobStudio1, kgobStudio1TV, kgobStudio1TV );
		While (cnt <= kcell6);
			Cell(cnt++, 0,0, 6);
		End;
	ENDCHUNK
